<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <!-- Song Title -->
  <%= f.label :title %>
  <%= f.text_field :title %>
  <!-- Artist Name -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %> 
  <!-- Genre Name -->
  <!-- form_for form builder - object argument can be omitted object is passed in as arg -->
  <!-- f.collection_select method, collection, value_method, text_method -->
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <!-- Notes -->
  <%= f.label :notes %>
  <input name='song[note_contents][]' id='song_notes_attributes_0_content'>
  <input name='song[note_contents][]' id='song_notes_attributes_1_content'>
  <input name='song[note_contents][]' id='song_notes_attributes_2_content'>
  <input name='song[note_contents][]' id='song_notes_attributes_3_content'>
  <br />
  <%= f.submit %>
<% end %>