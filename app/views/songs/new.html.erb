<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name, "Artist Name:" %>
  <%= f.text_field :artist_name %>

  <%= f.label :genre_id, "Select Genre:" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>
  <br />

  <%= f.fields_for :notes do |form| %>
    <%= form.label :note %>
    <%= form.text_area :content, rows: 10, cols: 50 %>

  <% end %>

  <%= f.submit %>
<% end %>


